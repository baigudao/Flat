<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.taisau.flat.ui.WelcomeActivity">

    <LinearLayout
        android:id="@+id/ll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="280dp"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:id="@+id/rl_key"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/color_white_default"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="@string/algorithm_key"
                android:textColor="@color/color_333"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/et_key"
                android:layout_width="564dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp10"
                android:textColor="@color/color_333"
                android:textSize="24sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/color_white_default"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="@string/device_name"
                android:textColor="@color/color_333"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="564dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="@string/tips_location"
                android:paddingStart="@dimen/dp10"
                android:textColor="@color/color_333"
                android:textSize="24sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@color/color_ddd" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/color_white_default"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="@string/ip_server"
                android:textColor="@color/color_333"
                android:textSize="26sp" />

            <EditText
                android:id="@+id/et_server_ip"
                android:layout_width="564dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:hint="@string/ip_format"
                android:paddingStart="@dimen/dp10"
                android:textColor="@color/color_333"
                android:textSize="24sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:background="@color/color_ddd" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@color/color_white_default">

            <TextView
                android:id="@+id/tv_compare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:text="@string/in_or_out"
                android:textColor="@color/color_333"
                android:textSize="26sp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/tv_compare"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_doorway_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/setting_radio_button_selector"
                    android:padding="10dp"
                    android:text="@string/doorway_out"
                    android:textColor="@color/color_666"
                    android:textSize="26sp" />

                <RadioButton
                    android:id="@+id/rb_doorway_in"
                    style="@style/setting_radio_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:text="@string/doorway_in"
                    android:textColor="@color/color_666"
                    android:textSize="26sp" />

            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_ddd" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp50"
            android:background="@drawable/setting_button_background2"
            android:text="@string/start" />
    </LinearLayout>
</LinearLayout>

