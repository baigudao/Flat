<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_compare_info"
    android:layout_width="wrap_content"
    android:layout_height="85dp"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="@mipmap/tips_back_gray"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_compare_img2"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:background="@color/white_fff"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/main_compare_img1"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginStart="23dp"
            android:background="@color/white_fff"
            android:padding="2dp"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="121dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/main_compare_info_img"
                android:layout_width="121dp"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/compare_pass" />

            <TextView
                android:id="@+id/main_compare_info_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="49dp"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="center"
                android:textSize="13sp"
                tools:text="比对通过"
                tools:textColor="@color/color_0dd63c" />

            <TextView
                android:id="@+id/main_compare_info_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/main_compare_info_img"
                android:layout_alignStart="@id/main_compare_info_img"
                android:layout_marginBottom="@dimen/dp5"
                android:layout_marginStart="49dp"
                android:gravity="center"
                android:textColor="@color/color_0dd63c"
                android:textSize="13sp"
                tools:text="分值：70分" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/main_compare_info_cardInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:lineSpacingExtra="5dp"
        android:text="@string/compare_result_info"
        android:textColor="@color/white_fff"
        android:textSize="16sp" />

</LinearLayout>